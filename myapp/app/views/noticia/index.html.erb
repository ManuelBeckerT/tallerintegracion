<h1>Noticia</h1>

<div class="row">
  <% @noticia.each do |noticium| %>
    <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
          <div class="caption">
            <h3><%= noticium.titulo %> </h3>
            <h4><%= noticium.bajada %></h4>
            <p><%= truncate(noticium.contenido, length:500, :separator => ' ') %></p>
            <p><%= link_to 'Show', noticium %>  </a>
              <button class="btn btn-primary" type="button">
                Comentarios <span class="badge"><%= noticium.comentario %></span>
              </button></p>
          </div>
          <% if user_signed_in? %>
              <td><%= link_to 'Edit', edit_noticium_path(noticium) %></td>
              <td><%= link_to 'Destroy', noticium, method: :delete, data: { confirm: 'Are you sure?' } %></td>

          <% end %>
        </div>
    </div>
    <% end %>
</div>

